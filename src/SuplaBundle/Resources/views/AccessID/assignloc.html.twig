<div class="loc-accessids">
    
     {{ form_start(form) }}

    <div class="aid-locations">
	<div class="row">
	{% if locations|length %}
		{% for loc in locations %}
		         
		  <label class="col-xs-4" data-id="{{ loc.id }}">
			 <input type="checkbox" name="lid[{{ loc.id }}]" value="1" {% if loc in selected %}checked{% endif %}>
			 <div class="item {% if loc.enabled == true %} enabled {% else %} disabled {% endif %}">
			 <span class="id">ID<strong>{{ loc.id }}</strong></span>
			 <div class="details-wrapper">
			 {% trans %}Caption{% endtrans %}<br />
			 <strong>{{ loc.caption }}</strong><br />
			 {% trans %}Password{% endtrans %}<br />
			 <strong>{{ loc.password }}</strong>
			 </div>
			 <span class="status">{% if loc.enabled == true %}{% trans %}Enabled{% endtrans %}{% else %}{% trans %}Disabled{% endtrans %}{% endif %}</span>
			 </div>
		   </label>
		  
		 {% endfor %}
	{% else %}
	<div class="attention">
		<i class="pe-7s-attention"></i>
		<h2>{% trans %}Lack of Locations{% endtrans %}</h2>
		<p>{% trans %}No Locations to be assigned to this Access Identifier.<br />Go to Locations and add one.{% endtrans %}</p>
	</div>
	{% endif %}
	</div>
	</div>
    <div class="overlay-controls">
    {{ form_widget(form) }}
    </div>
    {{ form_end(form) }}         
 </div>