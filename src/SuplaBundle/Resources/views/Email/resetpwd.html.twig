{% extends '@Supla/Email/template.html.twig' %}

{% block subject %}
    {% trans into userLocale %} SUPLA - Password reset {% endtrans %}
{% endblock %}

{% block preheader %}
    {% trans into userLocale %} Password reset instructions. {% endtrans %}
{% endblock %}

{% block body %}
    {% apply paragraph %} {% trans into userLocale %} Please click the following link to reset your %cloudHost% password. {% endtrans %} {% endapply %}
    {% apply linkButton(svrUrl(confirmationUrl)) %} {% trans into userLocale %} Reset Your Password {% endtrans %} {% endapply %}
    {% apply paragraph %} {% trans into userLocale %} This link is only valid for an hour. {% endtrans %} {% endapply %}
    {% apply paragraph %}
        <b>{% trans into userLocale %} NOTICE! {% endtrans %}</b>
        {% trans into userLocale %} If you did not request this password reset, please ignore this information. {% endtrans %}
        {% trans into userLocale %} It is possible that another user have entered your email address by mistake while resetting password to their own account. {% endtrans %}
    {% endapply %}
{% endblock %}

{% block footer %}{% endblock %}
