{% extends 'SuplaBundle::vue-template.html.twig' %}

{% block vue %}
    <transition name="fade">
        <navbar v-if="$user.username"></navbar>
    </transition>
    <loading-cover :loading="changingRoute">
        <transition name="fade-router">
            <router-view></router-view>
        </transition>
    </loading-cover>
    <cookie-warning v-if="$frontendConfig.supla_require_cookie_policy_acceptance && $user.username && !$user.userData.agreements.cookies"></cookie-warning>
    {% if not app.debug %}
        <idle-logout v-if="$user.username"></idle-logout>
    {% endif %}
{% endblock %}
