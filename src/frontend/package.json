{
  "name": "supla-cloud",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -fr ../../public/dist && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "prepare": "cypress install",
    "test:e2e:ci": "cross-env WAIT_ON_TIMEOUT=60000 start-test test:e2e:run-backend http://localhost:8008/api/server-info 'cypress run --config baseUrl=http://localhost:8008,defaultCommandTimeout=10000 --spec=tests/e2e/specs/stubbed/*.js,tests/e2e/specs/fullstack/*.js'",
    "test:e2e:dev": "start-test test:e2e:run-backend http://localhost:8008/api/server-info 'cypress open'",
    "test:e2e:run-backend": "rm -fr ../../var/cache/e2e && cross-env APPLICATION_ENV=e2e php8.2 -S 127.0.0.1:8008 -q -t ../../web",
    "test:e2e:nightly": "cypress run --config baseUrl=https://nightly.supla.org,defaultCommandTimeout=10000 --spec=tests/e2e/specs/nightly/*.js",
    "lint": "eslint . --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "collect-translations": "node scripts/collect-translations.js",
    "release": "node scripts/release.js",
    "release-dev": "cross-env NODE_ENV=development node scripts/release.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/vue-fontawesome": "^3.1.2",
    "@jaames/iro": "^5.5.2",
    "@vue/compat": "^3.5.22",
    "@vueuse/core": "^13.9.0",
    "apexcharts": "^5.3.6",
    "bootstrap-only-css": "^1.0.0",
    "change-case": "^5.4.4",
    "cronstrue": "^3.9.0",
    "cropperjs": "^1.6.2",
    "floating-vue": "^2.0.0",
    "idb": "^7.1.1",
    "js-base64": "^3.7.8",
    "latinize": "^2.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "pinia": "^3.0.3",
    "pixeden-stroke-7-icon": "^1.2.3",
    "tiny-emitter": "^2.1.0",
    "tom-select": "^2.4.3",
    "vivus": "0.4.4",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12",
    "vue-mention": "^2.0.0-alpha.3",
    "vue-router": "^4.5.1",
    "vue-slider-component": "^4.1.0-beta.7",
    "vue-tippy": "^6.7.1",
    "vue3-toastify": "^0.2.8",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "async": "^3.2.6",
    "chalk": "^5.6.2",
    "connection-string": "^5.0.0",
    "cross-env": "^10.1.0",
    "cypress": "^15.3.0",
    "del": "^8.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-vue": "~10.4.0",
    "find-in-files": "^0.5.0",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "mysql2": "^3.15.1",
    "ora": "^9.0.0",
    "prettier": "3.6.2",
    "sass-embedded": "^1.93.2",
    "smtp-tester": "^2.1.0",
    "start-server-and-test": "^2.1.2",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4"
  }
}
